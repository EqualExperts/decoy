#!/usr/bin/env python3
import click
import duckdb
from io import TextIOWrapper
from prompt_toolkit import print_formatted_text, HTML
import sys

from cli_io import print_rows, repl
from decoy import get_connection


@click.group()
def rootcmd():
    pass


@rootcmd.command()
@click.argument("filename", type=click.File("r"))
def exec(filename: TextIOWrapper):
    """Executes the sql in <filename> against duckdb, separate datasets with ---"""
    con = get_connection()

    input_sql_list = filename.read().split("---")
    for input_sql in input_sql_list:
        try:
            con.execute(input_sql)
        except duckdb.ParserException as pe:
            print_formatted_text(HTML(f"<ansired>{pe}</ansired>"))
            sys.exit(1)
        res = con.fetchdf()
        print_rows(res)


@rootcmd.command(name="repl")
def repl_commmand():
    con = get_connection()
    repl(con)


@rootcmd.command()
def generate():
    con = get_connection()
    count = 10
    con.execute("DROP TABLE IF EXISTS name_table;")
    con.execute(
        f"""
CREATE TABLE name_table AS SELECT
range as id,
decoy_en('name') as name
FROM range({count})"""
    )
    con.execute("""SELECT * FROM name_table;""")
    table = con.fetchall()
    for row in table:
        print(row)


@rootcmd.command()
def shuffle():
    con = get_connection()
    count = 10
    con.execute(
        f"""
SELECT name,
shuffle(name) as arrow,
intratable_sample(name) as sampled
FROM test;"""
    )
    res = con.fetchall()
    for row in res:
        print(row)


@rootcmd.command()
def oversample():
    con = get_connection()
    value_count = 10
    sample_count = 20
    con.execute("DROP TABLE IF EXISTS name_table;")
    con.execute("DROP TABLE IF EXISTS oversample;")
    con.execute(
        f"""
CREATE TABLE name_table AS SELECT
range as id,
decoy_en('name') as name
FROM range({value_count})"""
    )
    con.execute(
        f"""
WITH oversampling_table AS
(SELECT
cast(floor(random() * {value_count}) as int) as sample_index
FROM range({sample_count}))

SELECT * FROM name_table
RIGHT OUTER JOIN oversampling_table ON name_table.id = oversampling_table.sample_index
        """
    )
    table = con.fetchall()
    for row in table:
        print(row)


@rootcmd.command()
def oversample_python():
    con = get_connection()
    con.execute(
        f"""
DROP TABLE IF EXISTS name_table;
CREATE TABLE name_table AS SELECT range as id, decoy_en('name') as name FROM range(1000);

SELECT oversample('name_table', 'name') from range(10000);
        """
    )
    table = con.fetch_df()
    print_rows(table)


if __name__ == "__main__":
    rootcmd()
